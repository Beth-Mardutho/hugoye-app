<?xml version="1.0" encoding="UTF-8"?>
<meta xmlns="http://exist-db.org/xquery/repo">
    <!-- 
        Application configuration file for the Srophe application. 
    -->
    <config>
        <!-- Application title -->
        <title>Hugoye: Journal of Syriac Studies</title>
        <!-- App description -->
        <description/>
        <!-- Contact email -->
        <contact>info@hugoye.org</contact>
        <!-- Logo name (assumes path to logo is $app-root/resources/img/) -->
        <logo/>
        <!-- Web Site URL -->
        <url>https://hugoye.bethmardutho.org/</url>
        <!-- Root of app for building dynamic links. Default is eXist app root -->
        <nav-base/>
        <!-- eXist app root for app deployment-->
        <app-root>hugoye</app-root>
        <!-- eXist data app root for gazetteer data -->
        <data-root>hugoye-data</data-root>
        <!-- Base URI for identifiers in app data -->
        <base_uri>https://hugoye.bethmardutho.org/</base_uri>
        <!-- 
            Path to ODD file. Can be used in XSLT or XQuery transformations for controlled values. 
            Path to ODD file from app-root, or as an absolute path. 
            May be left blank. 
        -->
        <odd>/documentation/syriaca-tei-main.odd</odd>
        <!-- 
            xpath to unique identifier for record, syriaca.org uses tei:idno[@type='URL'], this is the default value 
            To use documnet location instead of URIs change to: 
            <document-ids type="document-url">document-url</document-ids>
            URI example: <id-path type="URI">tei:teiHeader/tei:fileDesc/tei:publicationStmt/tei:idno[@type='URL']</id-path>
        -->
        <document-ids type="URI">tei:teiHeader/tei:fileDesc/tei:publicationStmt/tei:idno[@type='URL']</document-ids>
        <!--<html-render type="xquery"></html-render>-->
        <html-render type="xslt"/>
        <!-- Map rendering -->
        <maps>
            <option>google</option>
            <option selected="true">leaflet</option>
        </maps>
        <!-- Keyboard options -->
        <keyboard-options>
            <option id="syriac-phonetic">Syriac Phonetic</option>
            <option id="syriac-standard">Syriac Standard</option>
            <!--<option id="ms-Arabic (101)">Arabic Mod. Standard</option>-->
            <option id="qwerty">English QWERTY</option>
            <!--
                <option id="ms-Greek">Greek Mod. Standard</option>
                <option id="ms-Russian">Russian Mod. Standard</option>
            -->
        </keyboard-options>
        
        <!-- Configure Collections. Optional -->
        <!-- Current list creats paths for any article type, if it appears in the URI, it needs to be also listed here -->
        <collections>
            <!-- <collection template="geo" name="places" title="The Syriac Gazetteer" app-root="/geo/" data-root="places" record-URI-pattern="http://syriaca.org/place/"/> -->
            <collection template="page" name="hugoye" title="Hugoye: Journal of Syriac Studies" app-root="/" data-root="/" record-URI-pattern="https://hugoye.bethmardutho.org/article/"/>
            <collection template="page" name="hugoye" title="Hugoye: Journal of Syriac Studies" app-root="/" data-root="/" record-URI-pattern="https://hugoye.bethmardutho.org/advertisement/"/>
            <collection template="page" name="hugoye" title="Hugoye: Journal of Syriac Studies" app-root="/" data-root="/" record-URI-pattern="https://hugoye.bethmardutho.org/conferenceAnnouncement/"/>
            <collection template="page" name="hugoye" title="Hugoye: Journal of Syriac Studies" app-root="/" data-root="/" record-URI-pattern="https://hugoye.bethmardutho.org/letterFromTheGeneralEditor/"/>
            <collection template="page" name="hugoye" title="Hugoye: Journal of Syriac Studies" app-root="/" data-root="/" record-URI-pattern="https://hugoye.bethmardutho.org/bookReview/"/>
            <collection template="page" name="hugoye" title="Hugoye: Journal of Syriac Studies" app-root="/" data-root="/" record-URI-pattern="https://hugoye.bethmardutho.org/conferenceReport/"/>
            <collection template="page" name="hugoye" title="Hugoye: Journal of Syriac Studies" app-root="/" data-root="/" record-URI-pattern="https://hugoye.bethmardutho.org/obituary/"/>
            <collection template="page" name="hugoye" title="Hugoye: Journal of Syriac Studies" app-root="/" data-root="/" record-URI-pattern="https://hugoye.bethmardutho.org/responseToBookReview/"/>
            <collection template="page" name="hugoye" title="Hugoye: Journal of Syriac Studies" app-root="/" data-root="/" record-URI-pattern="https://hugoye.bethmardutho.org/commemorativeIssue/"/>
            <collection template="page" name="hugoye" title="Hugoye: Journal of Syriac Studies" app-root="/" data-root="/" record-URI-pattern="https://hugoye.bethmardutho.org/review/"/>
            <collection template="page" name="hugoye" title="Hugoye: Journal of Syriac Studies" app-root="/" data-root="/" record-URI-pattern="https://hugoye.bethmardutho.org/report/"/>
        </collections>
        <!-- Hugoye specific configuration -->
        <!-- Article type order on volume pages multiple types maybe grouped together, see bookReview example -->
        <article-display-order>
            <article-type type="introduction" label="Introduction" peer-reviewed="no" order="1"/>
            <article-type type="obituary" label="In Memoriam" peer-reviewed="no" order="2"/>
            <article-type type="article" label="Articles" peer-reviewed="yes" order="3"/>
            <article-type type="shortArticle" label="Short Articles" peer-reviewed="no" order="4"/>
            <article-type type="bibliography" label="Bibliographies" peer-reviewed="no" order="5"/>
            <article-type type="report" label="Reports" peer-reviewed="no" order="6"/>
            <article-type type="review,bookReview" label="Reviews" peer-reviewed="no" order="7"/>
            <article-type type="announcement" label="Announcements" peer-reviewed="no" order="8"/>
        </article-display-order>
        <!-- Configure Search fields for the whole app. 
            Sort fields are used for sorting in browse and search. Facets should be defined separately in a facet-conf.xml document.
            If no fields are defined the default fields will be used: 
            title, author, titleSyriac, titleArabic
            
            If the field is a straight xpath, include it below (see publicationDate for an example), 
            If there is logic required in creating your field you will need to add a custom function
            in the facets.xql file with a corresponding name here (see title for an example). 
            
            You must have a title, titleSyriac, titleArabic, and an author field as they are hard coded into the application. 
            If you do not have applicable data, that is fine, the fields will be empty, but they must be defined. 
            
            <sortFields>
                <fields function="title">title</fields>
                <fields function="titleSyriac">titleSyriac</fields>
                <fields function="titleArabic">titleArabic</fields>
                <fields function="author">author</fields>
            </sortFields>
        
            Available types: 
                text
                keyword (for facets?)
                date
                integer
        -->
        <!-- Need to add seriesStmts anything else?  -->
        <!-- Need to add a path name? or can use idno?  -->
        <!-- Keyword, title, author -->
        <searchFields>
            <!-- Needed fields -->
            <fields function="fullText">fullText</fields>
            <fields function="title" boost="10">title</fields>
            <fields function="author" boost="8">author</fields>
            <fields function="editor" boost="8">editor</fields>
            
            <fields function="idno">idno</fields>
            <fields function="type">type</fields>
            
            <!-- Display Fields -->
            <fields function="displayTitleEnglish">displayTitleEnglish</fields>
            
            <fields function="pubDate" type="date">pubDate</fields>
            <fields function="pubPlace">pubPlace</fields>
            <fields function="publisher">publisher</fields>
            
        </searchFields>
        <facet-fields>
            <!-- 
                <facet-definition name="cbssPublicationDate" label="Publication Date" display="slider">
                <group-by>
                    <sub-path>descendant::tei:biblStruct/descendant::tei:imprint/tei:date</sub-path>
                </group-by>
                <max-values show="5">40</max-values>
                <order-by direction="descending">value</order-by>
                </facet-definition>
                <facet-definition name="cbssPubType" label="Publication Type">
                    <group-by function="cbssPubType">
                        <sub-path>descendant::tei:biblStruct/@type</sub-path>
                    </group-by>
                    <max-values show="5">40</max-values>
                    <order-by direction="ascending">value</order-by>
                </facet-definition>
                    <facet-definition name="cbssKeywords" label="Keywords">
                        <group-by function="cbssKeywords">
                            <sub-path>descendant::tei:relation[@ref="dc:subject"]</sub-path>
                        </group-by>
                        <max-values show="5">40</max-values>
                        <order-by direction="ascending">value</order-by>
                    </facet-definition>
            -->
        </facet-fields>
    </config>
</meta>